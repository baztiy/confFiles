{
"disableDiagnostics": {
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "hpp", "h"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
          "cache": {
            "directory": "/tmp/ccls"
          }
      }
    }
  }
},
"java-home": "/usr/lib/jvm/java-17-openjdk"
}
